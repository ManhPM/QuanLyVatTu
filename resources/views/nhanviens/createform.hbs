<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
        <meta name="description" content="" />
        <meta name="author" content="" />
        <title>QUẢN LÝ VẬT TƯ</title>
        <!-- Favicon-->
        <!-- Core theme CSS (includes Bootstrap)-->
        <link href="/css/styles1.css" rel="stylesheet" />
        <style>
            .font {
                font-size: 32px;
            }
            .head-content{
              margin-left: 36% !important;
            }
            .navbar{
                padding-bottom: 0.7rem;
            }
            .list-group-item + .list-group-item {
                height: 45px;
            }
        </style>
    </head>
    <body>
        <div class="d-flex" id="wrapper">
            <!-- Sidebar-->
            <div class="border-end bg-white" id="sidebar-wrapper">
                <div class="sidebar-heading border-bottom bg-light">QUẢN LÝ VẬT TƯ</div>
                <div class="list-group list-group-flush font-we">
                    <a class="list-group-item list-group-item-action list-group-item-light p-3 main-menu" style="height: 45px;" href="/nhacungcaps">Nhà cung cấp</a>
                    <a class="list-group-item list-group-item-action list-group-item-light p-3 main-menu" href="/hanghoas">Hàng hoá</a>
                    <a class="list-group-item list-group-item-action list-group-item-light p-3 main-menu" href="/hoadonnhaps">Phiếu nhập</a>
                    <a class="list-group-item list-group-item-action list-group-item-light p-3 main-menu" href="/hoadonxuats">Phiếu xuất</a>
                    <a class="list-group-item list-group-item-action list-group-item-light p-3 main-menu" href="/khos">Kho</a>
                    <a class="list-group-item list-group-item-action list-group-item-light p-3 main-menu" href="/loaihangs">Loại hàng</a>
                    <a class="list-group-item list-group-item-action list-group-item-light p-3 main-menu" href="/hoadonnhaps/thongke">Thống kê</a>
                    <a class="list-group-item list-group-item-action list-group-item-light p-3 main-menu" style="background-color: #e5e5e5;" href="/nhanviens">Nhân viên</a>
                    <a class="list-group-item list-group-item-action list-group-item-light p-3 main-menu" href="/khachhangs">Khách hàng</a>
                    <a class="list-group-item list-group-item-action list-group-item-light p-3 main-menu" href="/taikhoans">Tài khoản</a>
                    <a class="list-group-item list-group-item-action list-group-item-light p-3 main-menu" href="/taikhoans/infor">Thông tin</a>
                    <a class="list-group-item list-group-item-action list-group-item-light p-3 main-menu" href="/taikhoans/edit">Đổi mật khẩu</a>
                    <a class="list-group-item list-group-item-action list-group-item-light p-3 main-menu" href="/taikhoans/logout">Đăng xuất</a>
                </div>
            </div>
            <!-- Page content wrapper-->
            <div id="page-content-wrapper">

                <!-- Top navigation-->
                <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom">
                    <div class="container-fluid">
                        <button class="btn btn-primary" id="sidebarToggle">Menu</button>
                        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"><span class="navbar-toggler-icon"></span></button>
                    </div>
                </nav>
                <!-- Page content-->
                <div class="container-fluid">
                    <b class="font mt-2 ml-2 head-content">TẠO MỚI NHÂN VIÊN</b>
                    <form class="ml-4 mt-1" action="/nhanviens/create" method="POST" id="editform">
                       
                        <div class="form-group">
                          <label for="name">Tên nhân viên</label>
                          <input type="text" class="form-control" required="true" name="tenNV" id="tenNV"  placeholder="Tên nhân viên">
                        </div>
                        <div class="form-group">
                          <label for="name">Giới tính:</label>
                          <input class="ml-2" type="radio" id="age1" required="true" name="gioiTinh" value="Nam">
                          <label for="age1">Nam</label>
                          <input type="radio" id="age2" required="true" name="gioiTinh" value="Nữ">
                          <label for="age2">Nữ</label>
                        </div>
                        <div class="form-group">
                          <label for="name">Ngày sinh</label>
                          <input type="date" class="form-control" required="true" name="ngaySinh" id="ngaySinh"  placeholder="Ngày sinh">
                        </div>
                        <div class="form-group">
                          <label for="name">Email</label>
                          <input type="email" class="form-control" required="true" name="email" id="email"  placeholder="Địa chỉ email">
                        </div>
                        <div class="form-group">
                          <label for="name">Địa chỉ</label>
                          <input type="text" class="form-control" required="true" name="diaChi" id="diaChi"  placeholder="Địa chỉ">
                        </div>
                        <div class="form-group">
                          <label for="name">SDT</label>
                          <input type="number" oninput="maxLengthCheck(this)"
                           oninvalid="this.setCustomValidity('SDT yêu cầu 10 số')"
                           onkeyup="setCustomValidity('')"
                           minlength="9" min="99999999" required="true" class="form-control" name="sdt" id="sdt"  placeholder="Số điện thoại">
                        </div>
                        <div class="form-group">
                          <label for="name">Diễn giải</label>
                          <input type="text" class="form-control" name="dienGiai" id="dienGiai"  placeholder="Diễn giải về nhân viên">
                        </div>
                        {{#if flag}}

                        {{else}}
                              <div class="form-group">
                                <label for="name">Chức vụ</label>
                                <select name="maQuyen" form="editform">
                              {{#each phanquyens}}
                                  <option value="{{this.maQuyen}}">{{this.tenQuyen}}</option>
                              {{/each}}
                              </select>
                              </div>
                        {{/if}}
                        

                        <button type="submit" class="btn btn-primary mt-2">Lưu lại</button>
                      </form>
                      
                </div>
            </div>
        </div>
        <!-- Bootstrap core JS-->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
        <!-- Core theme JS-->
        <script src="/js/scripts.js"></script>
        <script>
          function maxLengthCheck(object)
            {
            if (object.value.length < 9)
                object.value = object.value.slice(0, 9)
                console.alert("SDT ít nhất 9 số")
            }
        </script>
    </body>
</html>
